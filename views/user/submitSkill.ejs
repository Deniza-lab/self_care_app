<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">  
</head>

<body class="bg-info-subtle">
    <div class="container text-center">
        <div class="row">
            <h1 class="display-1">Submit emotions and skills</h1>
            <%- include('../partials/headerLoggedIn.ejs') %>
        </div>
        <!--FIRST ROW-->
        <div class="row">
  
            <div class="row pb-2"><h2 class="display-6 text-start fs-4 mb-5">Our database does not contain all emotions people experience.
                Please fill out the form to submit a new skill or a new emotion to help other users find their emotions and skills that can help them.
            </h2>
                <div class="col">
                    <form class="display-6 text-start fs-5" method="POST">
                        <div class="mb-3">
                            <label for="emoSubmit" class="form-label">New emotion</label>
                            <input type="text" class="form-control" id="emoSubmit" name="emoSubmit">  
                        </div>
                        
                        <div class="mb-3">
                            <label for="emoCatSubmit" class="form-label">Category</label>
                            <select class="form-select" id="emoCatSubmitSelect" name="emoCatSubmit" onchange="toggleNewCategoryField()">
                                <option value="">Choose a category...</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.emo_categ %>"><%= category.emo_categ %></option>
                                    <% }) %>
                                <option value="New category">New category</option>
                                <option value="Unsure">Unsure</option>
                            </select>
                        </div>
                        <div class="mb-3" id="newCategoryField" style="display: none;">
                            <label for="emoCatSubmit" class="form-label">Enter New Category</label>
                            <input type="text" class="form-control" id="newCategory" name="newCategory" placeholder="Enter new category" >
                        </div>
                        <div class="mt-3">
                            <label for="skillName" class="form-label">New skill name</label>
                            <input type="text" class="form-control" id="skillName" name="skillName">  
                        </div>
                        
                        <div class="mb-3 mt-3">
                            <label for="skillInfo" class="form-label">New skill description</label>
                            <textarea class="form-control" placeholder="Enter a skill description here" id="skillInfo" name="skillInfo"></textarea>  
                            
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="check" name="check" required> 
                            <label class="form-check-label" for="check">My submission will be reviewed by the moderator and published on the website if it is appropriate</label>
                        </div>
                        
                        <button type="submit" class="btn btn-outline-warning shadow-sm fw-medium">Submit</button>
                    </form>
                    <!-- Toast Notification -->
                    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    Your submission has been successfull and is pending review.
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
    </div>
</div>
                    </div></div></div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        <% if (success) { %>
            const toast = new bootstrap.Toast(document.getElementById('successToast'));
            toast.show();
        <% } %>
    });


    document.querySelector('form').addEventListener('submit', function(event) {
        const categorySelect = document.getElementById('emoCatSubmitSelect');
        const newCategoryInput = document.getElementById('newCategory');
        
        if (categorySelect.value === 'New category' && newCategoryInput.value) {
            categorySelect.name = "";  
            newCategoryInput.name = "emoCatSubmit";  
        } else {
            newCategoryInput.name = ""; 
        }
    }); 


    function toggleNewCategoryField() {
        const categorySelect = document.getElementById('emoCatSubmitSelect');
        const newCategoryField = document.getElementById('newCategoryField');
        
        if (categorySelect.value === 'New category') {
            newCategoryField.style.display = 'block'; 
        } else {
            newCategoryField.style.display = 'none'; 
        }
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
</body>
</html>
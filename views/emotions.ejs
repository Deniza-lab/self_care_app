                      <tbody>
                          <% emoIdData['sd'].forEach(function(emotion) { %>
                              <tr>
                                  <td><%= emotion %></td>
                              </tr>
                          <% }); %>
                      </tbody>
                  </table>
              <% } else { %>
                  <p>No emotions found for ID: ag.</p>
              <% } %>

              </div>
            </div>
          </div>
            </div>

          </div>

        </div>
      </div>
    
    

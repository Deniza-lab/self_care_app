<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- Link to custom CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body class="bg-info-subtle">
    <div class="container text-center">
      <div class="row">
        <h1 class="display-1">Emotions list</h1>
      </div>
      <!--FIRST ROW-->
      <div class="row">
        <div class="row">
          <div class="col">
            <%- include('partials/header.ejs') %>
            <!-- Accordion -->
            <div class="accordion" id="accordionExample">
              <% for (let emoId in emoIdData) { %>
              <div class="accordion-item">
                <h2 class="accordion-header" id="heading<%= emoId %>">
                  <button
                    class="accordion-button collapsed <%= emoId === 'sd' ? 'bg-primary-subtle' : emoId === 'ag' ? 'bg-danger-subtle' : emoId === 'br' ? 'bg-secondary-subtle' : emoId === 'fr' ? 'bg-warning-subtle' : emoId === 'sc' ? 'bg-success-subtle' : 'bg-info-subtle' %>"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapse<%= emoId %>"
                    aria-expanded="false"
                    aria-controls="collapse<%= emoId %>"
                  >
                    <h1 class="display-6">
                      <%= emoIdData[emoId][0].emo_categ %>
                    </h1>
                  </button>
                </h2>
                <div
                  id="collapse<%= emoId %>"
                  class="accordion-collapse collapse"
                  aria-labelledby="heading<%= emoId %>"
                >
                  <div class="accordion-body">
                    <% if (emoIdData[emoId] && emoIdData[emoId].length > 0) { %>
                    <table class="table table-borderless">
                      <tbody>
                        <% emoIdData[emoId].forEach(function(emotion) { %>
                        <tr>
                          <td><%= emotion.emotion %></td>
                          <td>
                            <a
                              href="/skills/<%= emotion.emo_id %>?emo_id=<%= emotion.emo_id %>&emotion_name=<%= emotion.emotion %>"
                              class="btn btn-primary"
                            >
                              View Skills
                            </a>
                          </td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                    <% } else { %>
                    <p>No emotions found for ID: <%= emoId %>.</p>
                    <% } %>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
            <!-- End of Accordion -->
          </div>
        </div>

        <div class="d-grid gap-2 col-5 mx-auto"></div>
      </div>
    </div>
    <!--Bootstrap scripts-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

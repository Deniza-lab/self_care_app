<body class="bg-info-subtle">
    <div class="container text-center">
        <div class="row">Emotions list</div>
        <div class="row">
          <div class="col">
            Header</div>
          <div class="col">
            Header</div>
          <div class="col">
            Header</div>
            </div>

          <div class="row">
            <div class="col">
            <!--EMO ACCORDION-->
            <div class="accordion " id="accordionExample">
              <div class="accordion-item ">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed bg-danger-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Anger
                  </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample" >
                  <div class="accordion-body">
                    <% if (typeof emoIdData !== 'undefined' && emoIdData['ag'] && emoIdData['ag'].length > 0) { %>
                      <table border="1">
                          <tbody>
                              <% emoIdData['ag'].forEach(function(emotion) { %>
                                  <tr>
                                      <td><%= emotion %></td>
                                  </tr>
                              <% }); %>
                          </tbody>
                      </table>
                  <% } else { %>
                      <p>No emotions found for ID: ag.</p>
                  <% } %>

                  </div>
                </div>
              </div>
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed bg-secondary-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Boredom
                  </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample" >
